<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scan_barcode.ScanBarcodePageFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewScanBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_space"
        android:layout_marginHorizontal="@dimen/grid_space"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            >

            <ImageView
                android:id="@+id/imageViewAddBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:layout_marginHorizontal="@dimen/grid_space"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/im_add_barcode" />

            <TextView
                android:id="@+id/textViewScanBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/scan_barcode"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@id/imageViewAddBarcode"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/grid_space"
                android:gravity="center"
                android:layout_below="@+id/textViewScanBarcode"
                android:text="@string/scan_barcode_description"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>